@model CafeWebsite.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
            <p class="text-gray-600">Quản lý hệ thống Cafe Thủy Mộc</p>
        </div>

        <!-- Navigation -->
        <div class="mb-8">
            <nav class="flex space-x-4">
                <a asp-action="Dashboard" class="bg-amber-600 text-white px-4 py-2 rounded-lg">Dashboard</a>
                <a asp-action="Products" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300">Sản phẩm</a>
                <a asp-action="Orders" class="bg-gray-200 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-300">Đơn hàng</a>
                <a asp-controller="Home" asp-action="Index" class="bg-blue-600 text-white px-4 py-2 rounded-lg">Về trang chủ</a>
            </nav>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i data-lucide="dollar-sign" class="h-8 w-8 text-green-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Tổng doanh thu</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.TotalRevenue.ToString("N0") đ</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i data-lucide="shopping-bag" class="h-8 w-8 text-blue-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Tổng đơn hàng</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.TotalOrders</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i data-lucide="trending-up" class="h-8 w-8 text-amber-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Doanh thu hôm nay</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.TodayRevenue.ToString("N0") đ</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <i data-lucide="calendar" class="h-8 w-8 text-purple-600"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">Đơn hàng hôm nay</p>
                        <p class="text-2xl font-semibold text-gray-900">@Model.TodayOrders</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Popular Products -->
            <div class="bg-white rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Sản phẩm phổ biến</h3>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        @foreach (var product in Model.PopularProducts)
                        {
                            <div class="flex items-center">
                                <img src="@product.Image" alt="@product.Name" class="w-12 h-12 rounded-lg object-cover">
                                <div class="ml-4 flex-1">
                                    <p class="text-sm font-medium text-gray-900">@product.Name</p>
                                    <p class="text-sm text-gray-500">@product.PriceM.ToString("N0") đ</p>
                                </div>
                                <span class="text-sm text-gray-500">
                                    @(product.Category == CafeWebsite.Models.ProductCategory.Coffee ? "Cà phê" :
                                      product.Category == CafeWebsite.Models.ProductCategory.Tea ? "Trà" :
                                      product.Category == CafeWebsite.Models.ProductCategory.Smoothie ? "Sinh tố" : "Nước ép")
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="bg-white rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Đơn hàng gần đây</h3>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        @foreach (var order in Model.RecentOrders)
                        {
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-900">#@order.Id.Substring(0, 8)</p>
                                    <p class="text-sm text-gray-500">@order.CustomerName</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm font-medium text-gray-900">@order.Total.ToString("N0") đ</p>
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @(
                                        order.Status == CafeWebsite.Models.OrderStatus.Pending ? "bg-yellow-100 text-yellow-800" :
                                        order.Status == CafeWebsite.Models.OrderStatus.Confirmed ? "bg-blue-100 text-blue-800" :
                                        order.Status == CafeWebsite.Models.OrderStatus.Preparing ? "bg-orange-100 text-orange-800" :
                                        order.Status == CafeWebsite.Models.OrderStatus.Delivering ? "bg-purple-100 text-purple-800" :
                                        order.Status == CafeWebsite.Models.OrderStatus.Completed ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                        @(order.Status == CafeWebsite.Models.OrderStatus.Pending ? "Chờ xác nhận" :
                                          order.Status == CafeWebsite.Models.OrderStatus.Confirmed ? "Đã xác nhận" :
                                          order.Status == CafeWebsite.Models.OrderStatus.Preparing ? "Đang chuẩn bị" :
                                          order.Status == CafeWebsite.Models.OrderStatus.Delivering ? "Đang giao" :
                                          order.Status == CafeWebsite.Models.OrderStatus.Completed ? "Hoàn thành" : "Đã hủy")
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            lucide.createIcons();
        });
    </script>
}